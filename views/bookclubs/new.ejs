<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Bookclub</h1>
        <div class="col-6 offset-3">
            <form action="/bookclubs" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="club[name]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <input class="form-control" type="text" id="author" name="club[description]" required>
                </div>
                <div class="mb-3">
                    <input type="file" name="club[picture]" id="">
                <div class="mb-3">
                    <button class="btn btn-success">Create Book Club</button>
                </div>
            </form>

        </div>

    </div>