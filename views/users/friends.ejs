<% layout('layouts/boilerplate')%>


<div class="row">
    <div class="">
<h2>Friends</h2>
<% for (let friend of user.friends) {%>
    <a href="/friend/<%= friend._id %> ">

    <div class="card mb-3">
        <div class="row">
            <div class="col-2">

                <img src="https://res.cloudinary.com/dcynl9yzo/image/upload/w_200,h_200,c_fill,r_max/<%= friend.profilePicture.filename %>" class="" alt="..." style="width:4em;height: 4em;">
            </div>
            <div class="col">
                <div class="card-body">
                    <h6 class="card-title"><%= friend.username%></h6>
                </div>
            </div>
        </div>
    </div>
</a>
<% } %> 

