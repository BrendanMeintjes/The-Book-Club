<% layout('layouts/boilerplate')%>
    <h1>Books I have read</h1>
        <% for (let book of books) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= book.image%>" alt="" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Title: <%= book.title%></h5>
                            <h6 class="card-subtitle mb-2 text-muted">Author:<%= book.author%></h6>
                            <a class="btn btn-primary" href="/books/read/<%= book._id%>">View <%=book.title%></a>
                            <form class="d-inline" action="/books/read/<%= book._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
                <!-- this will be the book id from API and associated data -->